<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="HomePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Team_Selection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="-10dp"
                android:gravity="center"
                android:text="Team Selection"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:translationX="0dp"
                android:translationY="15dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/Auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="-10dp"
                android:gravity="center"
                android:text="Auto"
                android:textColor="@color/white"
                android:textSize="32sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/Tele_op_info"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="-10dp"
                android:gravity="center"
                android:text="Tele-Op"
                android:textColor="@color/white"
                android:textSize="42sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/Wolf_info"
                android:layout_width="243dp"
                android:layout_height="76dp"
                android:gravity="left"
                android:text="The wolf logo switches the backdrop, toggling between a white background and a black background. "
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationX="150dp"
                android:translationY="45dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/Wolf_logo_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pop"
                android:translationX="10dp"
                android:translationY="-65dp" />

            <ImageView
                android:id="@+id/Switch_off"
                android:layout_width="154dp"
                android:layout_height="87dp"
                android:src="@drawable/switchoff"
                android:translationX="240dp"
                android:translationY="-35dp" />

            <TextView
                android:id="@+id/Switch_off_Info"
                android:layout_width="233dp"
                android:layout_height="73dp"
                android:gravity="left"
                android:text="When the switch is positioned to the left and lacks a purple color, the switch tells us that the statement is false. "
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationX="10dp"
                android:translationY="-120dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Switch_on_info"
                android:layout_width="244dp"
                android:layout_height="61dp"
                android:gravity="left"
                android:text="When the switch is positioned to the right with a purple color, it us that that the statement is true."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationX="150dp"
                android:translationY="-110dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/Switch_on"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:src="@drawable/switchon"
                android:translationX="10dp"
                android:translationY="-180dp" />

            <ImageView
                android:id="@+id/Plus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/plus"
                android:translationX="270dp"
                android:translationY="-180dp" />

            <TextView
                android:id="@+id/Plus_info"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:gravity="left"
                android:text="Use the plus icon to show the increase of that statement."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationX="10dp"
                android:translationY="-240dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/Minus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/minus"
                android:translationX="30dp"
                android:translationY="-235dp" />

            <TextView
                android:id="@+id/Minus_info"
                android:layout_width="246dp"
                android:layout_height="65dp"
                android:gravity="left"
                android:text="Use the minus icon to show the decreasing that the statement is having."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationX="150dp"
                android:translationY="-305dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <Button
                android:id="@+id/next_info_button"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:backgroundTint="#3280B4"
                android:text="@string/next"
                android:translationX="265dp"
                android:translationY="-320dp"
                app:cornerRadius="100dp" />

            <TextView
                android:id="@+id/Next_info"
                android:layout_width="244dp"
                android:layout_height="71dp"
                android:gravity="left"
                android:text="The Next button will transport you to the next page, leading to a page titled End Game."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationX="10dp"
                android:translationY="-370dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <Button
                android:id="@+id/previous_info_button"
                android:layout_width="106dp"
                android:layout_height="48dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#3280B4"
                android:text="@string/previous"
                android:translationX="10dp"
                android:translationY="-400dp"
                app:cornerRadius="100dp" />

            <TextView
                android:id="@+id/Previous_info"
                android:layout_width="244dp"
                android:layout_height="54dp"
                android:gravity="left"
                android:text="The Previous button will take you back to the Auto page."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationX="150dp"
                android:translationY="-440dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Broke"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:gravity="left"
                android:text="Broke?"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:translationX="280dp"
                android:translationY="-430dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Broke_info"
                android:layout_width="257dp"
                android:layout_height="68dp"
                android:gravity="left"
                android:text="Broke means the robot broke and didn't work."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationX="10dp"
                android:translationY="-490dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Defense"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:gravity="left"
                android:text="Defense?"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:translationX="10dp"
                android:translationY="-470dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Defense_info"
                android:layout_width="244dp"
                android:layout_height="54dp"
                android:gravity="left"
                android:text="Broke means the robot broke and didn't work."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationX="160dp"
                android:translationY="-524dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Ground_info"
                android:layout_width="176dp"
                android:layout_height="116dp"
                android:gravity="left"
                android:text="Pick up from the ground means if it has picked up notes from the ground. "
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationX="10dp"
                android:translationY="-510dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Ground"
                android:layout_width="205dp"
                android:layout_height="105dp"
                android:gravity="left"
                android:text="Pick up from ground?"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:translationX="190dp"
                android:translationY="-640dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Source_Pick_up"
                android:layout_width="173dp"
                android:layout_height="87dp"
                android:gravity="left"
                android:text="Pick up from source?"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:translationX="10dp"
                android:translationY="-640dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Source_Pick_up_info"
                android:layout_width="205dp"
                android:layout_height="105dp"
                android:gravity="left"
                android:text="Pick up from the source means if it picked up notes from the person handing them out for the wall. "
                android:textColor="@color/white"
                android:textSize="17sp"
                android:translationX="190dp"
                android:translationY="-730dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Amp_Pick_up"
                android:layout_width="205dp"
                android:layout_height="42dp"
                android:gravity="left"
                android:text="Notes in Amp"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:translationX="220dp"
                android:translationY="-730dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Amp_Pick_up_info"
                android:layout_width="205dp"
                android:layout_height="105dp"
                android:gravity="left"
                android:text="Notes in Amp means if they scored in the Amp which is needed to amplify the speaker. "
                android:textColor="@color/white"
                android:textSize="17sp"
                android:translationX="10dp"
                android:translationY="-780dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Note_in_Speaker"
                android:layout_width="205dp"
                android:layout_height="105dp"
                android:gravity="left"
                android:text="Notes in Speaker Amplified/Unamplified"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:translationX="10dp"
                android:translationY="-570dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/Note_in_Speaker_info"
                android:layout_width="205dp"
                android:layout_height="105dp"
                android:gravity="left"
                android:text="Notes in Speaker means scoring in the big structure in the middle with two categories for Amplified and another for non-Amplified scoring. "
                android:textColor="@color/white"
                android:textSize="17sp"
                android:translationX="190dp"
                android:translationY="-640dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/End_Game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="-10dp"
                android:gravity="center"
                android:text="End Game"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:translationX="0dp"
                android:translationY="-100dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>