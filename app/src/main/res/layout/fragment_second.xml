<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:barrierMargin="0dp"
    tools:context=".SecondFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout_first"
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotationX="360"
            android:src="@drawable/pop"
            android:translationX="0dp"
            android:translationY="0dp" />

        <ImageView
            android:id="@+id/AMP"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/amp"
            android:translationX="0dp"
            android:translationY="265dp" />
        <ImageView
            android:id="@+id/SPEAKER"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/speaker"
            android:translationX="0dp"
            android:translationY="380dp" />

        <Switch
            android:id="@+id/broke"
            android:layout_width="280px"
            android:layout_height="wrap_content"
            android:text="Broke?     "
            android:textColor="#000000"
            android:textSize="26dp"
            android:thumbTint="#73C2F0"
            android:thumbTintMode="src_in"
            android:trackTint="#73C2F0"
            android:trackTintMode="src_over"
            android:translationX="30dp"
            android:translationY="150dp" />

        <Switch
            android:id="@+id/defense"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="Defense? "
            android:textColor="#000000"
            android:textSize="26dp"
            android:thumbTint="#73C2F0"
            android:trackTint="#73C2F0"
            android:trackTintMode="src_over"
            android:translationX="210dp"
            android:translationY="150dp" />

        <TextView
            android:id="@+id/intake"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Intake Method?"
            android:textColor="#000000"
            android:textSize="26dp"
            android:thumbTint="#73C2F0"
            android:trackTint="#73C2F0"
            android:trackTintMode="src_over"
            android:translationX="30dp"
            android:translationY="200dp" />
        <Button
            android:id="@+id/intakeBackground"
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#73C2F0"
            android:clickable="false"
            android:textSize="26dp"
            android:translationX="150dp"
            android:translationY="168dp"
            app:cornerRadius="100dp" />

        <Spinner
            android:id="@+id/intakeMethod"
            android:layout_width="205dp"
            android:layout_height="58dp"
            android:backgroundTint="#00FFFFFF"
            android:backgroundTintMode="src_over"
            android:spinnerMode="dropdown"
            android:translationX="150dp"
            android:translationY="200dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="Tele-OP"
            android:textSize="38dp"
            android:translationX="150dp"
            android:translationY="50dp" />
        <TextView
            android:id="@+id/team"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="Team 0"
            android:textSize="26dp"
            android:translationX="150dp"
            android:translationY="88dp" />

        <TextView
            android:id="@+id/ampNotes"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="Notes in Amp"
            android:textSize="26dp"
            android:translationX="30dp"
            android:translationY="330dp" />
        <TextView
            android:id="@+id/ampCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26dp"
            android:translationX="245dp"
            android:translationY="320dp" />

        <TextView
            android:id="@+id/speakerNotes"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Notes in Speaker"
            android:textSize="26dp"
            android:translationX="30dp"
            android:translationY="455dp" />

        <TextView
            android:id="@+id/speakerNotesCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26dp"
            android:translationX="245dp"
            android:translationY="445dp" />
        <TextView
            android:id="@+id/missedNotesCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26dp"
            android:translationX="245dp"
            android:translationY="545dp" />

        <TextView
            android:id="@+id/missedNotes"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Missed Notes"
            android:textSize="26dp"
            android:translationX="30dp"
            android:translationY="535dp" />

        <Button

            android:id="@+id/next"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:backgroundTint="#73C2F0"
            android:text="@string/next"
            android:translationX="230dp"
            android:translationY="600dp"
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button

            android:id="@+id/prev"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:backgroundTint="#73C2F0"
            android:text="Previous"
            android:translationX="80dp"
            android:translationY="600dp"
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/minusAmp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#73C2F0"
            android:text="-"
            android:textSize="26dp"
            android:translationX="150dp"
            android:translationY="280dp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/plusAmp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#73C2F0"
            android:backgroundTintMode="add"
            android:text="+"
            android:textSize="26dp"
            android:translationX="300dp"
            android:translationY="280dp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/minus_speaker"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#73C2F0"
            android:text="-"
            android:textSize="26dp"
            android:translationX="150dp"
            android:translationY="405dp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/plus_speaker"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#73C2F0"
            android:text="+"
            android:textSize="26dp"
            android:translationX="300dp"
            android:translationY="405dp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/minus_missed_notes"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#73C2F0"
            android:text="-"
            android:textSize="26dp"
            android:translationX="150dp"
            android:translationY="505dp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/plus_missed_notes"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#73C2F0"
            android:text="+"
            android:textSize="26dp"
            android:translationX="300dp"
            android:translationY="505dp"
            app:cornerRadius="100dp" />


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>